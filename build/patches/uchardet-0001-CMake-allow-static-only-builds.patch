From cf6a908c1a3e9bededee61ee6630def4a3311c10 Mon Sep 17 00:00:00 2001
From: RiCON <RiCON@nowhere>
Date: Sat, 21 Nov 2015 23:31:19 +0000
Subject: [PATCH 1/2] CMake: allow static-only builds

---
 CMakeLists.txt           | 6 ++++++
 src/CMakeLists.txt       | 8 ++++++++
 src/tools/CMakeLists.txt | 7 +++++++
 test/CMakeLists.txt      | 8 +++++++-
 uchardet.pc.in           | 1 +
 5 files changed, 29 insertions(+), 1 deletion(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 4f279e1..9d6d6ee 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -37,6 +37,10 @@ set (DIR_SHARE ${DIR_PREFIX}/share)
 set (DIR_BIN ${DIR_PREFIX}/bin)
 set (DIR_ETC ${DIR_PREFIX}/etc)
 
+if (DEFINED CMAKE_INSTALL_BINDIR)
+	set (DIR_BIN ${CMAKE_INSTALL_BINDIR})
+endif (DEFINED CMAKE_INSTALL_BINDIR)
+
 if (DEFINED CMAKE_INSTALL_LIBDIR)
 	set (DIR_LIBRARY ${CMAKE_INSTALL_LIBDIR})
 	set (DIR_LIBRARY_STATIC ${CMAKE_INSTALL_LIBDIR})
@@ -61,6 +65,8 @@ set (DIR_SHARE_LOCALE ${DIR_SHARE}/locale)
 
 option(BUILD_STATIC "Build static library"
        ON)
+option(BUILD_SHARED_LIBS "Build shared library and link executables against it"
+	   ON)
 
 configure_file(
 	uchardet.pc.in
diff --git a/src/CMakeLists.txt b/src/CMakeLists.txt
index 39f460c..e072f25 100644
--- a/src/CMakeLists.txt
+++ b/src/CMakeLists.txt
@@ -52,11 +52,13 @@ add_definitions(
 	-Wall
 )
 
+if (BUILD_SHARED_LIBS)
 add_library(
 	${UCHARDET_TARGET}
 	SHARED
 	${UCHARDET_SOURCES}
 )
+endif (BUILD_SHARED_LIBS)
 
 if (BUILD_STATIC)
     add_library(
@@ -66,6 +68,7 @@ if (BUILD_STATIC)
     )
 endif (BUILD_STATIC)
 
+if (BUILD_SHARED_LIBS)
 set_target_properties(
 	${UCHARDET_TARGET}
 	PROPERTIES
@@ -78,6 +81,7 @@ set_target_properties(
 		SOVERSION
 			0
 )
+endif (BUILD_SHARED_LIBS)
 
 if (BUILD_STATIC)
     set_target_properties(
@@ -97,6 +101,7 @@ if (CMAKE_BUILD_TYPE MATCHES Debug)
 	)
 endif (CMAKE_BUILD_TYPE MATCHES Debug)
 
+if (BUILD_SHARED_LIBS)
 if (NOT WIN32)
 install(
 	TARGETS
@@ -114,6 +119,7 @@ install(
 		${DIR_LIBRARY}
 )
 endif (NOT WIN32)
+endif (BUILD_SHARED_LIBS)
 
 if (BUILD_STATIC)
     install(
@@ -131,6 +137,8 @@ install(
 		${DIR_INCLUDE}/uchardet
 )
 
+if (BUILD_SHARED_LIBS)
 include(symbols.cmake)
+endif (BUILD_SHARED_LIBS)
 
 add_subdirectory(tools)
diff --git a/src/tools/CMakeLists.txt b/src/tools/CMakeLists.txt
index 7ad3ff5..bc709ee 100644
--- a/src/tools/CMakeLists.txt
+++ b/src/tools/CMakeLists.txt
@@ -8,10 +8,17 @@ add_executable(
 	${UCHARDET_SOURCES}
 )
 
+if (BUILD_SHARED_LIBS)
 target_link_libraries(
 	uchardet
 	${UCHARDET_TARGET}
 )
+else (BUILD_SHARED_LIBS)
+	target_link_libraries(
+		uchardet
+		${UCHARDET_STATIC_TARGET}
+	)
+endif (BUILD_SHARED_LIBS)
 
 install(
 	TARGETS
diff --git a/test/CMakeLists.txt b/test/CMakeLists.txt
index a36a739..087314c 100644
--- a/test/CMakeLists.txt
+++ b/test/CMakeLists.txt
@@ -7,11 +7,17 @@ add_executable(
 	uchardet-tests
 	${UCHARDET_TEST_SOURCES}
 )
-
+if (BUILD_SHARED_LIBS)
 target_link_libraries(
 	uchardet-tests
 	libuchardet
 )
+else (BUILD_SHARED_LIBS)
+	target_link_libraries(
+		uchardet-tests
+		libuchardet_static
+	)
+endif (BUILD_SHARED_LIBS)
 
 set_target_properties(
 	uchardet-tests
diff --git a/uchardet.pc.in b/uchardet.pc.in
index 660a401..8f646fd 100644
--- a/uchardet.pc.in
+++ b/uchardet.pc.in
@@ -8,4 +8,5 @@ Description: An encoding detector library ported from Mozilla
 Version: @UCHARDET_VERSION@
 Requires:
 Libs: -L${libdir} -luchardet
+Libs.private: -lstdc++
 Cflags: -I${includedir}/uchardet
